.form-container.signup-container.small-container
  #signup-form
    .title-page 
      h1= t('Signup with email')
    form.form(action="/signup", method="post", role="form")
      ul.form-errors
      .form-group
        input.form-control(type='text', id="firstName", name='firstName', tabindex=1, placeholder=t('Firstname'), autofocus)
      .form-group
        input.form-control(type='email', name='email', tabindex=2, placeholder=t('example@email.com'))
      .form-group
        input.form-control(type='password', name='password', tabindex=3, placeholder=t('Password'))
      .form-group
        #captcha-container
        #recaptcha_widget
          #recaptcha_image
          input.form-control#recaptcha_response_field(type="text", name="recaptcha_response_field", tabindex=4, placeholder=t('Type the words shown in the image'))
          ul.recaptcha_controls
            li#recaptcha-reload
              a(href="javascript:Recaptcha.reload()")
                i.flaticon-arrows64
            li.recaptcha_only_if_image
              a(href="javascript:Recaptcha.switch_type('audio')")
                i.flaticon-raise
            li.recaptcha_only_if_audio
              a(href="javascript:Recaptcha.switch_type('image')")
                i.flaticon-typografic
            li#recaptcha-help
              a(href="javascript:Recaptcha.showhelp()")
                i.flaticon-help
      .form-group: input.btn.btn-block.btn-primary.btn-lg(type='submit', tabindex=5, value=t('Signup now!'))
      .form-group
        input(type="checkbox" name="subscribed", tabindex=6)
        span.legend &nbsp;#{t('Keep me posted')}
      .form-group
        a.long-link.legend(href="http://apertura-entrada.herokuapp.com/privacidad" target="_blank")= t('Read our privacy terms')

