/* Vars
-------------------------------------------------- */
:root
  var-header_height: 60px
  var-spacing: 20px
  var-border_radius: 3px
  var-nav_proposal_width: 266px
  var-content_width: 580px
  var-link_blue: #2980b9

/* Law view
-------------------------------------------------- */
article.proposal
  margin: 40px auto
  min-height: 300px
  font-size: 18px
  line-height: 1.5
  position: relative

  a:hover
    color: #428bca
    text-decoration: underline

  img
    max-width: 100%

  .entry-tag
    font-weight: bold
    font-size: 11px
    text-transform: uppercase
    text-align: center
    position: absolute
    left: -140px
    width: 100px
    top: 44px
    img
      width: 40px
      height: 40px
      left: 30px
      top: 20px
      position: absolute

    .hexagon
      width: 80px
      height: 80px


  .summary
    font-size: 110%
    margin: 40px 0

  .clauses
    p.clause
      img
        width:100%
  h1
    margin-top: 0
    margin-bottom: 30px

  .meta-information
    margin-bottom: 10px
    opacity: .6
    color: black
    .icon-time
      margin-right: 6px
      color: #666
    .meta-timeago, .meta-timeago-label
      display: inline-block
    .meta-item
      color:black
    .label
      margin-right:10px
      display:inline-block
      border-radius:0

  hr
    border-top: 4px solid #eee
    width: 50%

  .read-more
    display: block
    text-transform: capitalize
    margin-top: 10px
    margin-bottom: 20px
  .footer-notes
    color: #666
    margin-bottom: 20px

  .participants
    font-weight: bold
    padding: 10px 0
    margin: 30px 0
    border-top: 2px solid #f1f1f1
    border-bottom: 2px solid #f1f1f1
    .participant-profile
      margin-left: 10px
      display: inline-block
      img
        width: 30px
        height: 30px
    .view-more
      background: #f1f1f1
      padding: 2px 10px
      color: #333
      margin-left: 6px
      margin-top: 2px
      display: inline-block
      border-radius: var(border_radius)

  .links
    p
      span.glyphicon
        font-size: 12px
        margin-right: 5px
      a
        font-size: 16px
        color: #333
        font-weight: bold

  .share-links
    margin-bottom: 40px
    a
      background: #ccc
      padding: 10px
      margin-right: 10px
      border-radius: var(border_radius)
      color: white
      display: inline-block
      line-height: 10px
      -webkit-transition: all 0.3s ease
      &:hover
        text-decoration: none
      &.facebook:hover
        background: #3b5998
      &.twitter:hover
        background: #3498db
      &.google-plus:hover
        background: #c0392b
