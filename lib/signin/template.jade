.form-container.signin-container.small-container
  #signin-form
    .title-page
      .circle
        i.icon-signin
      h1 #{t('Login to') + " " + t('DemocracyOS')}

    form.form(action="/signin", method="post", role="form", autovalidate='autovalidate', autosubmit='autosubmit')
      ul.form-errors
      .form-group
        input.form-control(type='text', name='email', tabindex=1, placeholder=t('example@email.com'), validate='required email')
      .form-group
        input.form-control(type='password', name='password', tabindex=2, placeholder=t('Password'))
      .form-group: .signup
        span=t('Forgot Password?')
        a(href='/forgot', tabindex=3) #{t('Reset password now')}
      .form-group: input.btn.btn-block.btn-primary.btn-lg(type='submit', tabindex=4, value=t('Login'))
      .form-group: .signup
        span=t('Don\'t have an account?')
        a(href='/signup', tabindex=5) #{t('Signup now')}
